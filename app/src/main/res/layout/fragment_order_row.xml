<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    >


    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">


        <TextView
            android:id="@+id/tvOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:text="Order Number : "
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvOrder"
            android:layout_margin="5dp"
            android:text="Order Status : "
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvStatus"
            android:layout_below="@+id/tvOrderStatus"
            android:text="Order Date : "
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tvOrderID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="5dp"
            android:layout_toEndOf="@+id/tvOrder"
            android:layout_toRightOf="@+id/tvOrder"
            android:text="Product Name"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOrderStatus"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/tvOrderID"
            android:layout_alignTop="@+id/tvStatus"
            android:text="Description"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/tvOrderDate"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignStart="@+id/tvOrderStatus"
            android:layout_alignTop="@+id/tvDate"
            android:text="Description"
            android:textSize="14sp" />


    </RelativeLayout>


</RelativeLayout>

